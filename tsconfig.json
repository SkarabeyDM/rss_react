{
  "compilerOptions": {
    "composite": false,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@pages/*": ["./src/pages/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@features/*": ["./src/features/*"],
      "@entities/*": ["./src/entities/*"],
      "@shared/*": ["./src/shared/*"],
      "@style/*": ["./src/shared/style/*"],
      "@tests/*": ["./src/tests/*"],
      "@src/*": ["./src/*"]
    },
    "plugins": [
      { "name": "typescript-plugin-css-modules" },
      { "name": "next" }
    ],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "incremental": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "src",
    "vite.config.ts",
    "vitest.config.js",
    "vitest-setup.ts",
    "next.config.mjs",
    "./dist/types/**/*.ts",
    "./next-env-.d.ts",
    "src/**/*"
  ],
  "exclude": ["./node_modules"]
}
